{
  "name": "@acme/nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm build:prod",
    "build:prod": "cross-env NODE_ENV=production dotenv -e ../../.env.production -- next build",
    "build:dev": "cross-env NODE_ENV=development dotenv -e ../../.env.development -- next build",
    "dev": "pnpm dev:local",
    "dev:local": "cross-env NODE_ENV=development dotenv -e ../../.env.development -- next dev --turbopack",
    "start": "cross-env NODE_ENV=production dotenv -e ../../.env.production -- next start",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@acme/api": "workspace:*",
    "@acme/auth": "workspace:*",
    "@acme/db": "workspace:*",
    "@acme/supabase": "workspace:^",
    "@acme/ui": "workspace:*",
    "@acme/utils": "workspace:^",
    "@acme/validators": "workspace:*",
    "@react-email/components": "0.0.34",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "@trpc/tanstack-react-query": "catalog:",
    "@uidotdev/usehooks": "github:uidotdev/usehooks",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.38.4",
    "geist": "^1.3.1",
    "lucide-react": "^0.482.0",
    "next": "^15.2.1",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "react-email": "^4.0.2",
    "react-hook-form": "^7.54.2",
    "react-loading-skeleton": "^3.5.0",
    "resend": "^4.2.0",
    "superjson": "2.2.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tailwind-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@supabase/ssr": "^0.5.2",
    "@types/node": "^22.10.10",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "jiti": "^1.21.7",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config"
}
